{% extends 'base.html.twig' %}

{% block title %}Mi Perfil{% endblock %}

{% block body %}
<style>
    .profile-container {
        max-width: 800px;
        margin: 3em auto;
        padding: 2em;
        background: linear-gradient(to bottom right, #ffefba, #ffffff);
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        text-align: center;
        font-family: 'Roboto', sans-serif;
    }

    .profile-container h1 {
        font-size: 2.5rem;
        color: #ff6f61;
        text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.3);
        margin-bottom: 1rem;
    }

    .profile-container p {
        font-size: 1.2rem;
        color: #555;
        margin-bottom: 1.5rem;
    }

    .profile-image {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        margin-bottom: 1.5rem;
        transition: transform 0.3s ease;
    }

    .profile-image:hover {
        transform: scale(1.1);
    }

    .profile-actions {
        margin-top: 2em;
    }

    .btn-primary {
        background: #ff6f61;
        color: white;
        border: none;
        padding: 0.8em 2em;
        font-size: 1rem;
        border-radius: 5px;
        cursor: pointer;
        text-transform: uppercase;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        transition: background-color 0.3s ease, transform 0.2s ease;
        margin: 0.5em;
    }

    .btn-primary:hover {
        background: #e65b50;
        transform: scale(1.05);
    }

    .anime-background {
        background-image: url('{{ asset('images/anime-bg.jpg') }}');
        background-size: cover;
        background-position: center;
        padding: 4em 0;
        color: white;
        text-shadow: 0px 2px 4px rgba(0, 0, 0, 0.7);
    }

    .anime-background h1 {
        font-size: 3rem;
        margin-bottom: 0.5em;
    }

    .anime-background p {
        font-size: 1.2rem;
    }
</style>

<div class="anime-background">
    <h1>Bienvenido a tu perfil, {{ app.user.name }}!</h1>
    <p>Tu espacio personal en nuestro mundo otaku.</p>
</div>

<div class="profile-container">
    <!-- Imagen de perfil -->
    {% if app.user.imagePerfil %}
        <img src="{{ asset('images/' ~ app.user.imagePerfil) }}" alt="Foto de perfil" class="profile-image" />
    {% else %}
        <img src="{{ asset('images/FotoPorDefecto.png') }}" alt="Imagen predeterminada" class="profile-image" />
    {% endif %}

    <!-- Información del usuario -->
    <h1>{{ app.user.name }}</h1>
    <p>Email: {{ app.user.email }}</p>

    <!-- Acciones del perfil -->
    <div class="profile-actions">
        <button class="btn-primary" onclick="window.location.href='{{ path('edit_profile') }}'">Editar Perfil</button>
        <button class="btn-primary" onclick="window.location.href='{{ path('app_logout') }}'">Cerrar Sesión</button>
        <form action="{{ path('delete_profile') }}" method="post" onsubmit="return confirm('¿Estás seguro de que deseas eliminar tu cuenta?');">
    <button type="submit" class="btn btn-danger">Eliminar Cuenta</button>
</form>

    </div>
</div>
{% endblock %}
