{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <h1>Mi Carrito</h1>

    {% if carrito|length == 0 %}
        <p>No hay artículos en su carrito.</p>
        <a href="{{ path('app_productos') }}" class="btn btn-secondary">Continuar comprando</a>
    {% else %}
        <table class="table">
            <thead>
                <tr>
                    <th>Imagen</th>
                    <th>Producto</th>
                    <th>Precio</th>
                    <th>Cantidad</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                {% for item in carrito %}
                    <tr>
                        <td>
                            <img src="{{ asset('build/images/' ~ item.producto.imagenUrl) }}" alt="{{ item.producto.name }}" style="width: 100px; height: auto;">
                        </td>
                        <td>{{ item.producto.name }}</td>
                        <td>{{ (item.producto.price / 100) | number_format(2, '.', '') }}€</td>
                        <td>{{ item.cantidad }}</td>
                        <td>{{ (item.producto.price * item.cantidad / 100) | number_format(2, '.', '') }}€</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="total">
            <h3>Total: {{ (totalCarrito / 100) | number_format(2, '.', '') }}€</h3>
        </div>

        <a href="{{ path('checkout') }}" class="btn btn-primary">Tramitar pedido</a>
    {% endif %}

    {% if not usuarioAutenticado %}
        <p>Debes iniciar sesión para completar tu compra.</p>
        <a href="{{ path('app_login') }}" class="btn btn-primary">Iniciar sesión</a>
    {% endif %}
</div>
{% endblock %}
