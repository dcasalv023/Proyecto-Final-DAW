{% extends 'base.html.twig' %}

{% block title %}
    Registro
    <link rel="stylesheet" href="{{ asset('build/css/register.css') }}">
{% endblock %}

{% block body %}
<div class="min-vh-100 d-flex flex-column" style="background-image: url('{{ asset('build/images/Anime.png') }}'); background-size: cover; background-position: center; background-repeat: no-repeat;">
    <div class="container d-flex justify-content-center align-items-center flex-grow-1">
        <div class="card shadow-lg" style="max-width: 400px; border-radius: 15px; overflow: hidden;">
            <div class="card-header text-center bg-dark text-white" style="font-family: 'Poppins', sans-serif; font-size: 1.5rem;">
                <img src="{{ asset('build/images/logo.png') }}" alt="Logo" style="height: 80px;">
                Bienvenido a AKIKAZE
            </div>
            <div class="card-body p-4" style="background: rgba(255, 255, 255, 0.9);">
                <!-- Flash Messages -->
                {% for flash_error in app.flashes('verify_email_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}

                <!-- Registration Form -->
                {{ form_start(registrationForm, { 'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'} }) }}

                <h2 class="text-center mb-4" style="font-family: 'Poppins', sans-serif;">ÃšNETE!!!</h2>

                <div class="form-group">
                    {{ form_label(registrationForm.name, "ðŸŒ¸ Nombre de usuario", {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(registrationForm.name, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(registrationForm.name) }}
                </div>

                <div class="form-group mt-3">
                    {{ form_label(registrationForm.email, "ðŸ“§ Email", {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(registrationForm.email) }}
                </div>

                <div class="form-group mt-3">
                    {{ form_label(registrationForm.plainPassword, 'ðŸ”’ ContraseÃ±a', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(registrationForm.plainPassword) }}
                </div>

                <div class="form-group mt-3 form-check">
                    {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                    {{ form_label(registrationForm.agreeTerms, "ðŸŽ´ Acepto las condiciones", {'label_attr': {'class': 'form-check-label'}}) }}
                    {{ form_errors(registrationForm.agreeTerms) }}
                </div>

                <div class="d-grid gap-2 mt-4">
                    <button class="btn btn-primary btn-lg" type="submit" style="background: #ff6f91; border-color: #ff6f91;">
                        Register
                    </button>
                </div>

                {{ form_end(registrationForm) }}
            </div>
            <div class="card-footer text-center bg-dark text-white">
                <small> Ya eres otaku? <a href="{{ path('app_login') }}" class="text-warning">Inicia sesiÃ³n</a></small>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
    <style>
        /* General Styles */
        .card {
            max-width: 400px;
            margin: auto;
            border-radius: 15px;
            overflow: hidden;
        }

        .card-header {
            font-family: 'Poppins', sans-serif;
            font-size: 1.5rem;
        }

        .card-body {
            background: rgba(255, 255, 255, 0.9);
            padding: 2rem;
        }

        .card-footer {
            background-color: #343a40;
            color: white;
        }

        .btn-primary {
            background-color: #ff6f91;
            border-color: #ff6f91;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        .btn-primary:hover {
            background-color: #ff4f75;
            transform: scale(1.05);
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .card {
                max-width: 90%;
                padding: 1rem;
            }

            .card-header {
                font-size: 1.3rem;
            }

            .card-body {
                padding: 1.5rem;
            }

            .btn-primary {
                font-size: 1rem;
                padding: 0.6em 1.5em;
            }
        }

        @media (max-width: 576px) {
            .card {
                max-width: 100%;
                padding: 1rem;
            }

            .card-header {
                font-size: 1.2rem;
            }

            .card-body {
                padding: 1rem;
            }

            .btn-primary {
                font-size: 0.9rem;
                padding: 0.5em 1.2em;
            }

            .form-group label {
                font-size: 0.9rem;
            }

            .form-group input,
            .form-group select {
                font-size: 1rem;
                padding: 0.75em;
            }

            h2 {
                font-size: 1.3rem;
            }
        }
    </style>
{% endblock %}
